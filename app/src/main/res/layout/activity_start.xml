<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    tools:context=".StartActivity">


    <LinearLayout
        android:id="@+id/layout_lifeView_start"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/border_background"
        android:layout_margin="10dp">

        <ImageView
            android:background="@drawable/life_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_life_startactivity"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="43dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_coinView_start"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/border_background_coin"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="30dp"
            android:background="@drawable/coin_icon"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="2231"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>